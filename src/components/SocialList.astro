---
import { SOCIAL_LINKS } from "@/data/constants";


// *** SVG icons from https://tablericons.com/ ***
---
<style>
  .hidden-address-content {
    display: none;
  }
</style>

<div class='flex flex-wrap items-center gap-x-4 sm:items-center'>
	<p>Find me on</p>
	<ul class='flex flex-1 items-center gap-x-4 sm:flex-initial'>
		<li>
			<a
				class='flex items-center p-2 sm:hover:text-link'
				href={SOCIAL_LINKS.github}
				target='_blank'
				rel='noopener noreferrer'
			>
				<svg
					class='h-6 w-6'
					aria-hidden='true'
					focusable='false'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					stroke='currentColor'
					fill='none'
					stroke-linecap='round'
					stroke-linejoin='round'
				>
					<path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
					<path
						d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5'
					>
					</path>
				</svg>
				<span class='sr-only'>Github</span>
			</a>
		</li>
		<li>
			<a
				class='flex items-center p-2 sm:hover:text-link'
				href={SOCIAL_LINKS.linkedin}
				target='_blank'
				rel='noopener noreferrer'
			>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					class='icon icon-tabler icon-tabler-brand-linkedin h-6 w-6'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					stroke='currentColor'
					fill='none'
					stroke-linecap='round'
					stroke-linejoin='round'
				>
					<path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
					<path d='M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z'
					></path>
					<path d='M8 11l0 5'></path>
					<path d='M8 8l0 .01'></path>
					<path d='M12 16l0 -5'></path>
					<path d='M16 16v-3a2 2 0 0 0 -4 0'></path>
				</svg>
				<span class='sr-only'>LinkedIn</span>
			</a>
		</li>
		<li>
			<a
				class='flex items-center p-2 sm:hover:text-link'
				href={SOCIAL_LINKS.blueSky}
				target='_blank'
				rel='noopener noreferrer'
			>
      <svg xmlns="http://www.w3.org/2000/svg" x-bind:width="size" x-bind:height="size" viewBox="0 0 24 24" fill="none" stroke="currentColor" x-bind:stroke-width="stroke" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
        <path d="M6.335 5.144c-1.654 -1.199 -4.335 -2.127 -4.335 .826c0 .59 .35 4.953 .556 5.661c.713 2.463 3.13 2.75 5.444 2.369c-4.045 .665 -4.889 3.208 -2.667 5.41c1.03 1.018 1.913 1.59 2.667 1.59c2 0 3.134 -2.769 3.5 -3.5c.333 -.667 .5 -1.167 .5 -1.5c0 .333 .167 .833 .5 1.5c.366 .731 1.5 3.5 3.5 3.5c.754 0 1.637 -.571 2.667 -1.59c2.222 -2.203 1.378 -4.746 -2.667 -5.41c2.314 .38 4.73 .094 5.444 -2.369c.206 -.708 .556 -5.072 .556 -5.661c0 -2.953 -2.68 -2.025 -4.335 -.826c-2.293 1.662 -4.76 5.048 -5.665 6.856c-.905 -1.808 -3.372 -5.194 -5.665 -6.856z"></path>
				</svg>
				<span class='sr-only'>BlueSky</span>
			</a>
		</li>
		<li>
			<button id="email-button" class='flex items-center gap-x-2 p-2 sm:hover:text-link'>
				<svg
					class='h-6 w-6'
					aria-hidden='true'
					focusable='false'
					xmlns='http://www.w3.org/2000/svg'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					stroke='currentColor'
					fill='none'
					stroke-linecap='round'
					stroke-linejoin='round'
				>
					<path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
					<rect x='3' y='5' width='18' height='14' rx='2'></rect>
					<polyline points='3 7 12 13 21 7'></polyline>
				</svg>
				<span class='sr-only'>Email</span>
			</button>
		</li>
	</ul>
	<p class='hidden-address-content address-content  flex w-full items-center justify-center bg-zinc-200 dark:bg-zinc-700 rounded-md px-2 py-1'></p>
</div>

<script>
	const emailButton = document.getElementById('email-button');
  emailButton?.addEventListener('click', () => {
    const addressContent = document.querySelectorAll('.address-content');
    addressContent.forEach(content => {
      content.textContent = atob('bWljaGFsQG1pY2hhbGN6dWttLnh5eg' + '==');
      content.classList.remove('hidden-address-content');
    });
  });
</script>
